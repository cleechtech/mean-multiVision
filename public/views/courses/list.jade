.container.top-padding-med
	.pull-right
		form.form-inline
			.form-group
				input.form-control(ng-model='searchTerm', placeholder='Filter')
			.form-group.margin-left-med
				select.form-control(ng-options='obj.value as obj.text for obj in sortOptions', ng-model='sortOrder')
	table.table.table-hover.table-striped.table-condensed
		thead
			tr
				th Title
				th Publish Date
		tbody
			//- filter: scopePropertyIWantToFilterBy, sorting == orderBy
			tr(ng-repeat='course in courses | filter: searchTerm | orderBy: sortOrder')
				td 
					a(ng-href='/courses/{{ course._id }}') {{ course.title }}
				td {{ course.published | date }}